# AI-CDN Configuration

# Application
APP_NAME=AI-CDN
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
API_CORS_ORIGINS=["*"]

# Database
# SQLite (for development)
DATABASE_URL=sqlite+aiosqlite:///./ai_cdn.db
# PostgreSQL (for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/ai_cdn
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Security
SECRET_KEY=change-me-in-production-use-a-long-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=60

# LLM
LLM_MODEL_NAME=Qwen/Qwen2-0.5B
LLM_DEVICE=cpu
LLM_MAX_TOKENS=512

# Engines
DEFAULT_ENGINE=fake
ENGINE_TIMEOUT=300

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Observability
ENABLE_METRICS=true
ENABLE_TRACING=false
METRICS_PORT=9090

# Infrastructure Pull Request (IPR)
IPR_ENABLED=true
IPR_AUTO_APPROVE=false
IPR_REQUIRE_REVIEW=true
