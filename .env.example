# ALMA Configuration

# Application
APP_NAME=ALMA
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
API_CORS_ORIGINS=["*"]

# Database
# SQLite (for development)
DATABASE_URL=sqlite+aiosqlite:///./alma.db
# PostgreSQL (for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/alma
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Security
SECRET_KEY=change-me-in-production-use-a-long-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=60

# API Key Authentication (Server-side)
ALMA_AUTH_ENABLED=false  # Set to true in production
ALMA_API_KEYS=test-api-key-12345,dev-api-key-67890  # Comma-separated keys

# API Key Authentication (CLI Client)
ALMA_API_KEY=test-api-key-12345  # Your API key for CLI commands

# LLM Configuration
# Model options: Qwen/Qwen2.5-0.5B-Instruct, Qwen/Qwen2.5-1.5B-Instruct, Qwen/Qwen2.5-7B-Instruct
LLM_MODEL_NAME=Qwen/Qwen2.5-0.5B-Instruct
# Device: cpu, cuda (NVIDIA GPU), mps (Apple Silicon), or none (disable LLM)
LLM_DEVICE=cpu
LLM_MAX_TOKENS=512

# Engines
DEFAULT_ENGINE=fake
ENGINE_TIMEOUT=300

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Observability
ENABLE_METRICS=true
ENABLE_TRACING=false
METRICS_PORT=9090

# Infrastructure Pull Request (IPR)
IPR_ENABLED=true
IPR_AUTO_APPROVE=false
IPR_REQUIRE_REVIEW=true
